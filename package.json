{
  "author": "大漠穷秋",
  "name": "ice-render",
  "version": "0.0.30",
  "description": "A canvas engine for interactive graphics.",
  "repository": "https://gitee.com/ice-render/ice-render",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "browser": "dist/index.umd.js",
  "main": "dist/index.cjs.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "start": "rollup -c -w  --environment NODE_ENV:development",
    "build": "npm run clean && npm run build:types && npm run build:js",
    "build:js": "rollup -c --environment NODE_ENV:production",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf dist",
    "pretty": "prettier src/**/* --write",
    "types:check": "tsc --noEmit",
    "types:watch": "npm run types:check -- --watch"
  },
  "dependencies": {
    "gl-matrix": "3.4.3",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@babel/core": "7.17.8",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-decorators": "7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@rollup/plugin-commonjs": "21.0.2",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@types/jest": "25.2.1",
    "@types/lodash": "4.14.180",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jest": "25.4.0",
    "lint-staged": "10.1.7",
    "rimraf": "3.0.2",
    "rollup": "2.70.1",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-license": "2.3.0",
    "rollup-plugin-terser": "5.3.0",
    "rollup-plugin-uglify": "6.0.4",
    "rollup-plugin-visualizer": "5.5.0",
    "typescript": "4.6.2"
  },
  "keywords": [
    "canvas",
    "graphic"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "npm": ">=6.4.1",
    "node": ">=10.13.0"
  },
  "license": "MIT"
}
